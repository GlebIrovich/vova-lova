{{!
< default}} <!-- IMAGE NEWS BANNER -->

    {{#with singleNews}}
    <div class="row text-center image-overlay project" id="main">

        {{!-- <div class="image-banner" id="main" style="	background: url({{{image.secure_url}}}) no-repeat center center; background-size: cover;
"></div>
        --}}
        <img src="{{{imageBig.secure_url}}}" alt="" />
        <div class="on-screen-text">
            <h1 class="first-line text-uppercase">новости фонда</h1>
        </div>
    </div>

    <!-- NEWS BODY -->

    <div class="row text-center pt-7-rem news-body" id="about">
        <div class="col-12">
            <h5 class="text-uppercase main-title mb-0">{{{title}}}</h5>
            <div class="small-line mx-auto"></div>
            <div class="w-75 mx-auto m-5">
                {{{content.full}}}
            </div>
            <div class="row">
                <div class="col-md-3 col-6">
                    <i class="far fa-calendar-alt"></i>
                    <p class="date">{{{date date format='DD MMMM YYYY'}}}</p>
                </div>

                {{#if tag}}
                <div class="col-md-3 col-6">
                    <i class="fas fa-tag"></i>
                    <p class="tag">{{{tag}}}</p>
                </div>
                {{/if}} {{#if content.author}}
                <div class="col-md-3 offset-md-3 col-12">
                    <p class="author">Автор статьи: {{{content.author}}}</p>
                </div>
                {{/if}}

            </div>
        </div>
    </div>

    {{#if video.youtubeId}}
    <div class="row text-center video" id="news-video">
        <div class="col-12 pr-0 pl-0">

            <div class="iframe" style="position:relative;height:0;padding-bottom:56.29%"><iframe src="https://www.youtube.com/embed/{{video.youtubeId}}?ecver=2&playlist={{video.youtubeId}}&autoplay=0&controls=0&disablekb=1&fs=0&loop=0&modestbranding=1&rel=0&showinfo=0&mute=0"
                    style="position:absolute;width:100%;height:100%;left:0" width="640" height="360" frameborder="0"
                    allow="autoplay; encrypted-media" allowfullscreen></iframe></div>

        </div>
    </div>
    {{/if}}

    {{/with}}

    {{> news_carousel}}

    {{>form}}